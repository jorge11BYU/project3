<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Shared Calendar</h2>
    </div>

<div class="row">
    <% if(events.length === 0) { %>
        <div class="col-12">
            <div class="card shadow-sm p-5 text-center text-muted">
                <h4>No upcoming events</h4>
                <p>Enjoy the free time!</p>
            </div>
        </div>
    <% } %>

    <% events.forEach(event => { %>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100 border-start border-4 border-primary">
                <div class="card-body">
                    <h5 class="card-title fw-bold"><%= event.event_title %></h5>
                    <p class="card-text text-muted mb-2">
                        ğŸ“… <%= new Date(event.start_time).toLocaleDateString() %>
                    </p>
                    <p class="card-text">
                        â° <%= new Date(event.start_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %> 
                        - 
                        <%= new Date(event.end_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                    </p>
                </div>
            </div>
        </div>
    <% }) %>
</div>
<%- include('partials/footer') %>