<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Monthly Expenses</h2>
    <a href="/expenses/new" class="btn btn-primary shadow-sm">+ Add Expense</a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">Date</th>
                    <th>Property</th>
                    <th>Vendor</th>
                    <th>Category</th>
                    <th class="text-end pe-4">Amount</th>
                </tr>
            </thead>
            <tbody>
                <% if (expenses.length === 0) { %>
                    <tr><td colspan="5" class="text-center py-3 text-muted">No expenses recorded yet.</td></tr>
                <% } %>
                <% expenses.forEach(e => { %>
                <tr>
                    <td class="ps-4 align-middle"><%= new Date(e.expense_date).toLocaleDateString() %></td>
                    <td class="align-middle"><%= e.nickname %></td>
                    <td class="align-middle"><%= e.vendor %></td>
                    <td class="align-middle"><span class="badge bg-light text-dark border"><%= e.expense_category %></span></td>
                    <td class="text-end pe-4 fw-bold text-danger">-$<%= e.amount %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('partials/footer') %>