<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>The Pines Dashboard</h1>
    <span class="text-muted">Welcome, <%= user.first_name %></span>
</div>

<div class="row">
    <div class="col-md-8">
        
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">ðŸ›  Pending Maintenance</h5>
                <ul class="list-group list-group-flush">
                    <% if (maintenance.length === 0) { %>
                        <li class="list-group-item text-muted">No pending requests.</li>
                    <% } %>
                    <% maintenance.forEach(item => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong><%= item.nickname %></strong>: <%= item.description %>
                            </div>
                            <span class="badge bg-warning text-dark"><%= item.status %></span>
                        </li>
                    <% }) %>
                </ul>
                <div class="mt-3 text-end">
                    <a href="/maintenance" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">ðŸ“… Shared Calendar</h5>
                <table class="table table-bordered text-center table-sm">
                    <thead>
                        <tr class="table-light">
                            <th>Date</th>
                            <th>Event</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (events.length === 0) { %>
                            <tr><td colspan="3" class="text-muted">No upcoming events.</td></tr>
                        <% } %>
                        <% events.forEach(event => { %>
                            <tr>
                                <td><%= new Date(event.start_time).toLocaleDateString() %></td>
                                <td><%= event.event_title %></td>
                                <td><%= new Date(event.start_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">ðŸ’° Recent Expenses</h5>
                <div class="alert alert-light border">
                    <small class="text-muted">Most recent costs:</small>
                    <ul class="list-unstyled mt-2">
                        <% expenses.forEach(exp => { %>
                            <li class="d-flex justify-content-between border-bottom py-1">
                                <span><%= exp.expense_category %></span>
                                <strong>$<%= exp.amount %></strong>
                            </li>
                        <% }) %>
                    </ul>
                </div>
                <a href="/expenses" class="d-block text-center text-decoration-none">View Budget &rarr;</a>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">ðŸ“¢ Message Board</h5>
                <ul class="list-group list-group-flush">
                    <% messages.forEach(msg => { %>
                        <li class="list-group-item px-0">
                            <div class="d-flex justify-content-between">
                                <small class="text-truncate" style="max-width: 150px;"><%= msg.message %></small>
                                <span class="badge bg-success" style="height: fit-content;">New</span>
                            </div>
                        </li>
                    <% }) %>
                </ul>
                <div class="mt-2 text-center">
                    <a href="/board" class="btn btn-sm btn-light w-100">Go to Board</a>
                </div>
            </div>
        </div>

    </div>
</div>

<%- include('partials/footer') %>
