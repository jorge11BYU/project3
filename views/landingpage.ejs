<%- include('partials/header') %>

    <!-- Custom Styles for a Professional Look -->
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #2c3e50, #4ca1af);
            --card-border-radius: 12px;
            --bg-soft: #f4f7f6;
        }

        body {
            background-color: var(--bg-soft);
        }

        /* Hero Section */
        .dashboard-hero {
            background: var(--primary-gradient);
            color: white;
            padding: 2.5rem 2rem;
            border-radius: var(--card-border-radius);
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        /* Cards */
        .custom-card {
            border: none;
            border-radius: var(--card-border-radius);
            background: white;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            height: 100%;
            overflow: hidden;
        }

        .custom-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        }

        .card-header-styled {
            background: white;
            border-bottom: 1px solid #f0f0f0;
            padding: 1.25rem 1.5rem;
            font-weight: 700;
            color: #444;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* Lists and Tables */
        .list-group-item {
            border-left: none;
            border-right: none;
            padding: 1rem 1.5rem;
        }

        .table thead th {
            background-color: #f8f9fa;
            color: #6c757d;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid #e9ecef;
        }
    </style>

    <!-- Bootstrap Icons (ensure this is included if not in your header) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Dashboard Header -->
    <div class="dashboard-hero d-flex justify-content-between align-items-center">
        <div>
            <h1 class="fw-bold mb-1">The Pines Dashboard</h1>
            <p class="mb-0 opacity-75">Welcome back, <%= user.first_name %>! Here is what's happening today.</p>
        </div>
        <div class="d-none d-md-block display-4">ðŸŒ²</div>
    </div>

    <div class="row g-4">
        <!-- LEFT COLUMN (Maintenance & Calendar) -->
        <div class="col-lg-8">

            <!-- Maintenance Section -->
            <div class="mb-4">
                <div class="custom-card">
                    <div class="card-header-styled" style="border-left: 5px solid #ffc107;">
                        <i class="bi bi-tools text-warning fs-5"></i>
                        <span>Pending Maintenance</span>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            <% if (maintenance.length===0) { %>
                                <li class="list-group-item text-muted text-center py-4">
                                    <i class="bi bi-check-circle-fill text-success fs-3 d-block mb-2"></i>
                                    No pending requests.
                                </li>
                                <% } %>
                                    <% maintenance.forEach(item=> { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1 text-dark fw-bold">
                                                    <%= item.nickname %>
                                                </h6>
                                                <small class="text-muted">
                                                    <%= item.description %>
                                                </small>
                                            </div>
                                            <span class="badge bg-warning text-dark rounded-pill">
                                                <%= item.status %>
                                            </span>
                                        </li>
                                        <% }) %>
                        </ul>
                        <div class="p-3 text-end bg-light border-top">
                            <a href="/maintenance" class="btn btn-sm btn-outline-dark">View All Requests</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Shared Calendar Section -->
            <div class="mb-4">
                <div class="custom-card">
                    <div class="card-header-styled" style="border-left: 5px solid #dc3545;">
                        <i class="bi bi-calendar-event text-danger fs-5"></i>
                        <span>Shared Calendar</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead>
                                    <tr>
                                        <th class="ps-4">Date</th>
                                        <th>Event</th>
                                        <th class="text-end pe-4">Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (events.length===0) { %>
                                        <tr>
                                            <td colspan="3" class="text-center text-muted py-4">No upcoming events.</td>
                                        </tr>
                                        <% } %>
                                            <% events.forEach(event=> { %>
                                                <tr>
                                                    <td class="ps-4 fw-medium text-danger">
                                                        <%= new Date(event.start_time).toLocaleDateString() %>
                                                    </td>
                                                    <td>
                                                        <%= event.event_title %>
                                                    </td>
                                                    <td class="text-end pe-4 text-muted">
                                                        <%= new Date(event.start_time).toLocaleTimeString([],
                                                            {hour: '2-digit' , minute:'2-digit'}) %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT COLUMN (Expenses & Messages) -->
        <div class="col-lg-4">

            <!-- Recent Expenses -->
            <div class="mb-4">
                <div class="custom-card">
                    <div class="card-header-styled" style="border-left: 5px solid #198754;">
                        <i class="bi bi-wallet2 text-success fs-5"></i>
                        <span>Recent Expenses</span>
                    </div>
                    <div class="card-body p-3">
                        <div class="alert alert-light border mb-0">
                            <p class="small text-muted text-uppercase fw-bold mb-2">Latest Transactions</p>
                            <ul class="list-unstyled mb-0">
                                <% expenses.forEach(exp=> { %>
                                    <li class="d-flex justify-content-between border-bottom py-2">
                                        <span class="text-dark">
                                            <%= exp.expense_category %>
                                        </span>
                                        <span class="fw-bold text-success">$<%= exp.amount %></span>
                                    </li>
                                    <% }) %>
                                        <% if (expenses.length===0) { %>
                                            <li class="text-muted small">No recent expenses found.</li>
                                            <% } %>
                            </ul>
                        </div>
                        <a href="/expenses" class="btn btn-success w-100 mt-3 shadow-sm">View Budget &rarr;</a>
                    </div>
                </div>
            </div>

            <!-- Message Board -->
            <div class="mb-4">
                <div class="custom-card">
                    <div class="card-header-styled" style="border-left: 5px solid #0dcaf0;">
                        <i class="bi bi-chat-left-text text-info fs-5"></i>
                        <span>Message Board</span>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            <% if (messages.length===0) { %>
                                <li class="list-group-item text-center text-muted small py-3">No new messages.</li>
                                <% } %>
                                    <% messages.forEach(msg=> { %>
                                        <li class="list-group-item py-3">
                                            <div class="d-flex align-items-start gap-2">
                                                <i class="bi bi-person-circle text-secondary fs-4"></i>
                                                <div class="flex-grow-1">
                                                    <div class="d-flex justify-content-between">
                                                        <span class="fw-bold small text-dark">
                                                            <%= msg.username %>
                                                        </span>
                                                        <span class="badge bg-light text-secondary border">New</span>
                                                    </div>
                                                    <p class="mb-1 small text-muted">
                                                        <%= msg.message %>
                                                    </p>
                                                </div>
                                            </div>
                                        </li>
                                        <% }) %>
                        </ul>
                        <div class="p-3">
                            <a href="/board" class="btn btn-outline-info w-100">Go to Board</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('partials/footer') %>