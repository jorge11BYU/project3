<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Units</h2>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0">Add New Unit</h5>
    </div>
    <div class="card-body">
        <form action="/units/add" method="POST" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="nickname" class="form-control" placeholder="Nickname (e.g. Condo 1)" required>
            </div>
            <div class="col-md-4">
                <input type="text" name="city" class="form-control" placeholder="City" required>
            </div>
            <div class="col-md-2">
                <input type="text" name="state" class="form-control" placeholder="State">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Add Unit</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">Nickname</th>
                    <th>Location</th>
                    <th>Type</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (properties.length === 0) { %>
                    <tr><td colspan="4" class="text-center py-3 text-muted">No units found. Add one above!</td></tr>
                <% } %>
                <% properties.forEach(p => { %>
                <tr>
                    <td class="ps-4 fw-bold align-middle"><%= p.nickname %></td>
                    <td class="align-middle"><%= p.city %>, <%= p.state %></td>
                    <td class="align-middle"><%= p.property_type %></td>
                    <td class="text-end pe-4">
                        <a href="/units/<%= p.property_id %>" class="btn btn-sm btn-outline-primary me-1">View</a>
                        <form action="/units/delete/<%= p.property_id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('partials/footer') %>