<%- include('partials/header') %>

<div class="row align-items-center mb-4">
    <div class="col-md-4">
        <h2>Message Board</h2>
    </div>
    <div class="col-md-8">
        <form action="/board" method="GET" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Search messages or usernames..." value="<%= searchTerm || '' %>">
            <button type="submit" class="btn btn-outline-secondary">Search</button>
            <% if(searchTerm) { %> <a href="/board" class="btn btn-link">Clear</a> <% } %>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm sticky-top" style="top: 20px;">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Post Update</h5>
            </div>
            <div class="card-body">
                <form action="/board/add" method="POST">
                    <div class="mb-3">
                        <textarea name="message" class="form-control" rows="4" placeholder="Share an update with owners..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Post Message</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="list-group shadow-sm">
            <% if (messages.length === 0) { %>
                <div class="list-group-item text-center py-4 text-muted">No messages match your search.</div>
            <% } %>
            <% messages.forEach(m => { %>
                <a href="/board/thread/<%= m.message_id %>" class="list-group-item list-group-item-action p-4">
                    <div class="d-flex w-100 justify-content-between mb-2">
                        <h5 class="mb-1 text-primary"><%= m.username %></h5>
                        <small class="text-muted"><%= new Date(m.created_time).toLocaleString() %></small>
                    </div>
                    <p class="mb-1 text-dark"><%= m.message %></p>
                </a>
            <% }) %>
        </div>
    </div>
</div>
<%- include('partials/footer') %>