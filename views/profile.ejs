<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow text-center">
            <div class="card-body py-5">
                <h2 class="card-title fw-bold"><%= user.first_name %> <%= user.last_name %></h2>
                <p class="text-muted mb-4">@<%= user.username %></p>
                
                <ul class="list-group list-group-flush text-start mb-4">
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="text-muted">User ID</span>
                        <span class="fw-bold"><%= user.user_id %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="text-muted">Phone</span>
                        <span class="fw-bold"><%= user.phone || 'Not provided' %></span>
                    </li>
                </ul>

                <a href="/logout" class="btn btn-outline-danger w-100">Sign Out</a>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>